\definecolor{IowaGold}{RGB}{255,205,0}
\definecolor{IowaGray}{RGB}{99,102,106}
\definecolor{IowaBlue}{RGB}{0,85,140}
\definecolor{IowaGreen}{RGB}{0,102,79}
